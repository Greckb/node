<h1 class="text-center">{{user.userName}}</h1>
<p class="text-center">{{email}}</p>
<p class="text-center">Edita aqui tu perfil</p>
<div class="text-center my-4">
    {{#if imagen}}
        <img src="img/perfiles/{{imagen}}" class="rounded-circle" type="image/jpeg" >
        {{else}}
        <img src="img/perfiles/Perfil.jpeg" class="rounded-circle" type="image/jpeg" >
    {{/if}}

</div>

<form action="/perfil?_csrf={{csrfToken}}" method="post" enctype="multipart/form-data">
    
    <input class="form-control form-control-sm" id="formFileSm" type="file" name="myFile">
    <button class="btn btn-dark my-3">Cambiar Imagen de Perfil</button>

    

</form>
