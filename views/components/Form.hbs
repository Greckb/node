{{#if url}}
    <form action="/editar/{{url._id}}" method="POST">
        <input type="hidden" name="_csrf" value="{{csrfToken}}" />
        <input value={{url.origen}} type="text" placeholder="Edite Url" name="origen" class="form-control my-2">
        <button type="submit" class="btn btn-warning w-100 mb-2">Editar Url</button>
    </form>

{{else}}
<form action="/" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    <input type="text" placeholder="ingrese Url" name="origen" class="form-control my-2">
    <button type="submit" class="btn btn-primary w-100 mb-2">Agregar Url</button>
</form>
{{/if}}

